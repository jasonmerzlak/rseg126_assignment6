pipeline {
    agent any

    stages {
        stage('Ant Info') {
            steps {
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant -version'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant run'
                } 
            }
        }
    }
}