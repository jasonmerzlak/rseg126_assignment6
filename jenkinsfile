pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Syncing...'
                git branch: 'main', credentialsId: 'zideaaediz', url: 'https://github.com/jasonmerzlak/rseg126_assignment6'
                echo 'Building...'
                withAnt(installation: 'myinstall') {
                    if (isUnix()) {
                    sh "ant"
                    } else {
                    bat "ant"
                    }
                }                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}