pipeline {
    agent any

    stages {
        stage('Ant Info') {
            steps {
                sh 'ant -version'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                withAnt(installation: "LocalAnt") {
                    bat 'ant build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                withAnt(installation: "LocalAnt") {
                    bat "ant run"
                } 
            }
        }
    }
}