pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Syncing...'
                git branch: 'main', credentialsId: 'zideaaediz', url: 'https://github.com/jasonmerzlak/rseg126_assignment6'
                echo 'Building...'
                withAnt(installation: "LocalAnt") {
                    script {
                        winCompName = bat(script: "ant", returnStdout: true).readLines()
                    }
                    echo "${winCompName}"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                withAnt(installation: "LocalAnt") {
                    bat "ant run"
                } 
            }
        }
    }
}