pipeline {
    agent any

    stages {
        stage('Information') {
            steps {
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant info'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                    bat 'ant test'
                }
                junit testResults: 'build/results.xml', skipPublishingChecks: true
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                withAnt(installation: "LocalAnt", jdk: "LocalJDK") {
                } 
            }
        }
    }
}